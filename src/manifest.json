{
    "name": "sieb-openui-devtools",
    "description": "Siebel OpenUI devtools utility (non-official)",
    "version": "1.0",
    "manifest_version": 2,
    "minimum_chrome_version": "37",
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["scripts/content-script.js"],
        "run_at": "document_end",
        "all_frames": true
    }],
    "background": {
        "scripts": ["scripts/background.js"]
    },
    "devtools_page": "devtools.html",
    "permissions": [
        "tabs"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "web_accessible_resources": [
        "scripts/client-listener.js"
    ]
}
